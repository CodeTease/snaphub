rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Snaps can be read by anyone, but only created by authenticated users.
    // Only the user who created a snap can update or delete it.
    match /snaps/{snapId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth.uid == resource.data.uid;
    }
  }
}
